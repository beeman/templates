{
  "bin": {
    "bun-library-solana-kit": "dist/cli.mjs"
  },
  "dependencies": {
    "@solana/kit": "^6.0.1",
    "@solana/kit-plugin-rpc": "^0.3.0"
  },
  "devDependencies": {
    "@beeman/testcontainers": "^1.1.0",
    "@biomejs/biome": "^2.4.0",
    "@changesets/cli": "^2.29.8",
    "@intellectronica/ruler": "^0.3.34",
    "@solana/kit-plugins": "^0.3.1",
    "@types/bun": "^1.3.9",
    "pkg-pr-new": "^0.0.62",
    "publint": "^0.3.16",
    "testcontainers": "^11.11.0",
    "tsdown": "^0.20.3"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "description": "TypeScript library for Solana development with @solana/kit, Surfpool e2e tests, Bun, tsdown, Biome, and Changesets",
  "name": "bun-library-solana-kit",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beeman/bun-library-solana-kit.git"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "build": "tsdown",
    "changeset": "changeset",
    "check-types": "tsc -b --noEmit",
    "ci": "bun run build && bun run lint && bun run check-types && bun run test",
    "lint": "biome check --error-on-warnings",
    "lint:fix": "biome check --error-on-warnings --write",
    "postinstall": "[ -f .env.example ] && [ ! -f .env ] && cp -v .env.example .env || true",
    "release": "changeset publish",
    "ruler:apply": "ruler apply --local-only",
    "test": "bun test test/index.test.ts",
    "test:e2e": "bun test test/e2e.test.ts",
    "test:watch": "bun test --watch",
    "version": "changeset version && bun lint:fix"
  },
  "type": "module",
  "types": "./dist/index.d.mts",
  "version": "0.0.0"
}
